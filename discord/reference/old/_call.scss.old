//call buttons
.colorable-1bkp8v {
  background: $rb-bg-primary;
  color: white !important;

  .centerIcon-2G6o-T,
  .controlIcon-35oS15 {
    color: white !important;
  }

  &:hover {
    background: $rb-bg-secondary-d !important;
  }

  &.active-1QRrIS,
  &.white-3GPOIp {
    background: white !important;
    color: $rb-bg-primary !important;

    .centerIcon-2G6o-T,
    .controlIcon-35oS15 {
      color: $rb-bg-primary !important;
    }
  }
  &.active-1QRrIS:hover,
  &.white-3GPOIp:hover,
  &.white-3GPOIp.active-1QRrIS:hover {
    background: #f2f3f5 !important;
  }
}
/*scale the circular calling state*/
.participant-1lOCsd {
  transform: scale(1.3, 1.3) !important;
  margin-left: 20px;
  margin-right: 20px;
}
